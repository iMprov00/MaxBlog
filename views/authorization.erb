<!-- контейнер -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">

        <!-- Карточка с формой -->
        <div class="card shadow-sm">
          <div class="card-body p-4">

            <h2 class="text-center mb-4">Авторизация</h2>

            <form method="post" action="/authorization">

              <label class="form-label" style="font-weight: bold">Логин</label>
              <input type="login" class="form-control" name="login" placeholder="Введите логин">

              <br/>

              <label class="form-label" style="font-weight: bold">Пароль</label>
              <input type="password" class="form-control" name="password" placeholder="Введите пароль">

              <br/>

              <div class="d-grid gap-2 col-6 mx-auto">
                <button type="submit" class="btn btn-primary mb-3">Войти</button>
              </div>

              <div class="text-center">
                <a href="/registr">Зарегистрироваться</a>
              </div>

            </form>

          </div>
        </div>

    </div>
  </div>
</div>