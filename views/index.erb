  <% if @error %>
    <div class="alert alert-danger mb-3">
      <%= @error %>
    </div>
  <% end %>
  
<% @result.each do |post| %>
	    <p>
	      <h1><%= post['head'] %></h1>
	      <%= post['content'] %>
	      <br/>
	      <span style="font-size: 75%; color: #999; font-style: italic">Время добавления: <%= post['created_date'] %></span>
	      <br/>
	      <br/>
	      <a href="/post/<%= post['post_id'] %>">Комментарии</a> <!—- передаем номер поста -—>
	    </p>
	  <hr/> <!-- раздляет чертой --> 
<% end %>
